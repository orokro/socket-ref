{
	"name": "socket-ref",
	"version": "0.0.6",
	"description": "Vue-compatible refs synchronized over websockets",
	"exports": {
		".": {
			"import": "./index.js",
			"require": "./cjs/index.cjs.js"
		},
		"./server": {
			"import": "./socketRefServer.js",
			"require": "./cjs/socketRefServer.cjs.js"
		}
	},
	"main": "./index.js",
	"files": [
