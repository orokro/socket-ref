		"vue": "^3.0.0"
	},
	"optionalDependencies": {
		"ws": "^8.18.1"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^29.0.0",
		"@rollup/plugin-node-resolve": "^16.0.3",
		"rollup": "^4.54.0",
		"vitest": "^4.0.16",
		"vue": "^3.5.13",
		"ws": "^8.18.3"
